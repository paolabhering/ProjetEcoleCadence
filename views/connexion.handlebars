<form action="/add-user" method="POST" class="connexion-form">
    <h2 data-en="User Addition Form" data-fr="Formulaire d'ajout d'utilisateur">Formulaire d'ajout d'utilisateur</h2>
    <div class="flex-container">
        <div class="flex-item">
            <label for="username"><b data-en="Name:" data-fr="Nom :">Nom :</b></label>
            <input type="text" id="username" name="username" placeholder="Entrez le nom d'utilisateur" data-en="Enter the username" data-fr="Entrez le nom d'utilisateur" required>
        </div>
        <div class="flex-item">
            <label for="email"><b data-en="Email:" data-fr="Email :">Email :</b></label>
            <input type="email" id="email" name="email" placeholder="Entrez votre email" data-en="Enter your email" data-fr="Entrez votre email" required>
        </div>
        <div class="flex-item colonneCache"></div>
        <div class="flex-item">
            <label for="password"><b data-en="Password:" data-fr="Mot de passe :">Mot de passe :</b></label>
            <input type="password" id="password" name="password" placeholder="Entrez le mot de passe" data-en="Enter the password" data-fr="Entrez le mot de passe" required>
        </div>
        <div class="flex-item full-width">
            <label for="groups"><b data-en="Group(s):" data-fr="Groupe(s) :">Groupe(s) :</b></label>
            <div class="group-inputs">
                <input type="text" id="groupName" name="groupName" placeholder="Entrez le nom du groupe" data-en="Enter the group name" data-fr="Entrez le nom du groupe" required>
                <div id="groupFieldsContainer"></div>
                <div class="button-container">
                    <button type="button" class="add-group" onclick="addGroupField()" data-en="Add Group" data-fr="Ajouter un groupe">+</button>
                </div>
            </div>
        </div>
        <div class="flex-item full-width">
            <label for="role"><b data-en="Role:" data-fr="Rôle :">Rôle :</b></label>
            <div class="radio-group">
                <input type="radio" id="admin" name="role" value="administrateur" required><b data-en="Administrator" data-fr="Administrateur">Administrateur</b>
                <input type="radio" id="professeur" name="role" value="professeur" required><b data-en="Professor" data-fr="Professeur">Professeur</b>
            </div>
        </div>
        <div class="flex-item full-width">
            <label for="language"><b data-en="Language:" data-fr="Langue :">Langue :</b></label>
            <div class="radio-group">
                <input type="radio" id="french" name="language" value="fr" required><b data-en="French" data-fr="Français">Français</b>
                <input type="radio" id="english" name="language" value="en" required><b data-en="English" data-fr="Anglais">Anglais</b>
            </div>
        </div>
        <div class="flex-item full-width">
            <button type="submit" class="btn btn_roseFonce" id="boutonCompte" data-en="Save" data-fr="Enregistrer">Enregistrer</button>
        </div>
    </div>
</form>



<script>

    window.onload = () => {

        document.getElementById("btnEnglish").addEventListener("click", () => switchLanguage("en"));
        document.getElementById("btnFrench").addEventListener("click", () => switchLanguage("fr"));
    };

    function switchLanguage(lang) {
        document.querySelectorAll("[data-en]").forEach(element => {
            element.textContent = element.getAttribute(`data-${lang}`);
        });
    }

    function addGroupField() {
        const groupInputsContainer = document.querySelector('.group-inputs');
        const newGroupInput = document.createElement('input');
        newGroupInput.type = 'text';
        newGroupInput.placeholder = 'Entrez le nom du groupe';
        newGroupInput.name = 'groups';
        newGroupInput.required = true;

        
    // Ajouter le nouvel input en premier dans le conteneur
    groupFieldsContainer.insertBefore(newGroupInput, groupFieldsContainer.firstChild); // Ajoute en haut du conteneur
    }
</script>

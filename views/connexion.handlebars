
<div>
{{> headerConnexion}}
</div>

<h2><bold>COSTUMIER/COSTUME INVENTORY</bold></h2>

<div class="form-container">
    <!-- Login form -->
    <form action="/login" method="POST" class="connexion-form">
        <div class="form-group">
            <h3 class="userLabel">NOM D'UTILISATEUR</h3>
        </div>
        <div class="form-group">
            <input type="text" id="username" name="username" placeholder="Entrez votre nom d'utilisateur" required>
        </div>
        <div class="form-group">
            <h3 class="userLabel">MOT DE PASSE</h3>
        </div>
        <div class="form-group">
            <input type="password" id="password" name="password" placeholder="Entrez votre mot de passe" required>
        </div>
        <!-- Forgot password link -->
        <div style="text-align: center; margin-top: 20px;">
            <a href="/reset-password" class="lienRose">Mot de passe oublié ?</a>
        </div><br>
        <button type="submit" class="btn btn_roseFonce">ENTRER</button>
    </form>
</div>


<script>
    // Check if the URL contains the query parameter `userCreated=true`
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('userCreated') === 'true') {
        alert("Utilisateur créé avec succès!");
    }
</script>

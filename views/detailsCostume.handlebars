<div class="grid-container-detail">
    <div class="image-container">
        <img src="../static/img/{{costume.image}}" style="width:400px; height:400px" class="imgCostume"><br> 
    </div>

    <div class="grid-item-detail">
        <h3 >{{costume.titre}}</h3><br>
        <b data-en="Category: " data-fr="Catégorie: ">Catégorie: </b>{{costume.category}}<br><br>
        <b data-en="Colors: " data-fr="Couleurs: ">Couleurs: </b><br>
        <div class="couleur-container">
            {{#each (split costume.color ", ")}}
                {{#if (eq this "brun")}}<div class="color-label brun" data-en="Brown" data-fr="Brun"></div>{{/if}}
                {{#if (eq this "rouge")}}<div class="color-label rouge" data-en="Red" data-fr="Rouge"></div>{{/if}}
                {{#if (eq this "rose")}}<div class="color-label rose" data-en="Pink" data-fr="Rose"></div>{{/if}}
                {{#if (eq this "mauve")}}<div class="color-label mauve" data-en="Purple" data-fr="Mauve"></div>{{/if}}
                {{#if (eq this "bleu")}}<div class="color-label bleu" data-en="Blue" data-fr="Bleu"></div>{{/if}}
                {{#if (eq this "vert")}}<div class="color-label vert" data-en="Green" data-fr="Vert"></div>{{/if}}
                {{#if (eq this "jaune")}}<div class="color-label jaune" data-en="Yellow" data-fr="Jaune"></div>{{/if}}
                {{#if (eq this "orange")}}<div class="color-label orange" data-en="Orange" data-fr="Orange"></div>{{/if}}
                {{#if (eq this "noir")}}<div class="color-label noir" data-en="Black" data-fr="Noir"></div>{{/if}}
                {{#if (eq this "gris")}}<div class="color-label gris" data-en="Gray" data-fr="Gris"></div>{{/if}}
                {{#if (eq this "blanc")}}<div class="color-label blanc" data-en="White" data-fr="Blanc"></div>{{/if}}
                {{#if (eq this "multicolore")}}<div class="color-label multicolore" data-en="Multicolored" data-fr="Multicolore"></div>{{/if}}
            {{/each}}
        </div><br>
        <b data-en="Age Group Category: " data-fr="Catégorie d'âge: ">Catégorie d'âge: </b>{{costume.age_group}}<br><br>
        <b data-en="Quantity by Size: " data-fr="Quantité par grandeur: ">Quantité par grandeur:</b><br>
        <table id="tableDetail">
            <tr>
                <th data-en="Size" data-fr="Grandeur"></th>
                <th data-en="Child" data-fr="Enfant">Enfant</th>
                <th data-en="Adult" data-fr="Adulte">Adulte</th>
                <th data-en="N/A" data-fr="N/A">N/A</th>
            </tr>
            <tr>
                <td data-label="Grandeur" data-en="XX-Small" data-fr="XX-petit">XX-petit</td>
                <td data-label="Enfant">{{quantites.XXpetit_enfant}}</td>
                <td data-label="Adulte">{{quantites.XXpetit_adulte}}</td>
                <td data-label="N/A"></td>
            </tr>
            <tr>
                <td data-label="Grandeur" data-en="X-Small" data-fr="X-petit">X-petit</td>
                <td data-label="Enfant">{{quantites.Xpetit_enfant}}</td>
                <td data-label="Adulte">{{quantites.Xpetit_adulte}}</td>
                <td data-label="N/A"></td>
            </tr>
            <tr>
                <td data-label="Grandeur" data-en="Small" data-fr="Petit">Petit</td>
                <td data-label="Enfant">{{quantites.petit_enfant}}</td>
                <td data-label="Adulte">{{quantites.petit_adulte}}</td>
                <td data-label="N/A"></td>
            </tr>
            <tr>
                <td data-label="Grandeur" data-en="Medium" data-fr="Moyen">Moyen</td>
                <td data-label="Enfant">{{quantites.moyen_enfant}}</td>
                <td data-label="Adulte">{{quantites.moyen_adulte}}</td>
                <td data-label="N/A"></td>
            </tr>
            <tr>
                <td data-label="Grandeur" data-en="Large" data-fr="Grand">Grand</td>
                <td data-label="Enfant">{{quantites.grand_enfant}}</td>
                <td data-label="Adulte">{{quantites.grand_adulte}}</td>
                <td data-label="N/A"></td>
            </tr>
            <tr>
                <td data-label="Grandeur" data-en="X-Large" data-fr="X-grand">X-grand</td>
                <td data-label="Enfant">{{quantites.Xgrand_enfant}}</td>
                <td data-label="Adulte">{{quantites.Xgrand_adulte}}</td>
                <td data-label="N/A"></td>
            </tr>
            <tr>
                <td data-label="Grandeur" data-en="XX-Large" data-fr="XX-grand">XX-grand</td>
                <td data-label="Enfant">{{quantites.XXgrand_enfant}}</td>
                <td data-label="Adulte">{{quantites.XXgrand_adulte}}</td>
                <td data-label="N/A"></td>
            </tr>
            <tr>
                <td data-label="Grandeur" data-en="No Size" data-fr="Sans grandeur">Sans grandeur</td>
                <td data-label="Enfant">{{quantites.sansGrandeur_enfant}}</td>
                <td data-label="Adulte">{{quantites.sansGrandeur_adulte}}</td>
                <td data-label="N/A">{{quantites.sansGrandeur}}</td>
            </tr>
        </table><br>
        <b data-en="Total Quantity: " data-fr="Quantité totale: ">Quantité totale: </b>{{quantiteTotale}}<br><br>
        <b data-en="Location: " data-fr="Localisation: ">Localisation: </b>{{#if costume.localisation}}{{costume.localisation}}{{else}}N/A{{/if}}<br>
        <b data-en="Box: " data-fr="Boîte: ">Boîte: </b>{{#if costume.boite}}{{costume.boite}}{{else}}N/A{{/if}} <br><br>
        <b data-en="Notes: " data-fr="Notes: ">Notes: </b>{{#if costume.notes}}{{costume.notes}}{{else}}N/A{{/if}}  <br><br>
        <button type="button" class="btn btn_roseFonce" onclick=rediriger({{costume.costume_id}}) data-en="EDIT" data-fr="MODIFIER">MODIFIER</button>
    </div>
</div>


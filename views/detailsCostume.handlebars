
<script>

  function rediriger() {
    window.location.href = "/modif/:id_costume";
  }
  
</script>

{{> headerAd}} 

<div class="grid-container-detail">
    <div class="grid-item-detail">
      <img src="../static/img/{{costume.image}}" style="width:400px; height:400px"><br>
    </div>

  <div class="grid-item-detail">
    <h3>{{costume.titre}}</h3><br>
    <b>Catégorie:  </b>{{costume.category}}<br>
    <b>Couleur: </b>
      <div class="couleur-container">
        {{#each (split costume.color ", ")}}
          {{#if (eq this "brun")}}<div class="color-label brun"></div>{{/if}}
          {{#if (eq this "rouge")}}<div class="color-label rouge"></div>{{/if}}
          {{#if (eq this "rose")}}<div class="color-label rose"></div>{{/if}}
          {{#if (eq this "mauve")}}<div class="color-label mauve"></div>{{/if}}
          {{#if (eq this "bleu")}}<div class="color-label bleu"></div>{{/if}}
          {{#if (eq this "vert")}}<div class="color-label vert"></div>{{/if}}
          {{#if (eq this "jaune")}}<div class="color-label jaune"></div>{{/if}}
          {{#if (eq this "orange")}}<div class="color-label orange"></div>{{/if}}
          {{#if (eq this "noir")}}<div class="color-label noir"></div>{{/if}}
          {{#if (eq this "gris")}}<div class="color-label gris"></div>{{/if}}
          {{#if (eq this "blanc")}}<div class="color-label blanc"></div>{{/if}}
          {{#if (eq this "multicolore")}}<div class="color-label multicolore"></div>{{/if}}
        {{/each}}
      </div>
    <b>Catégorie d'âge: </b>{{costume.age_group}}<br><br>
    <b>Quantité par grandeur:</b><br>
        <table>
            <tr>
                <th></th>
                <th>Enfant</th>
                <th>Adulte</th>
                <th>N/A</th>
            </tr>
            <tr>
                <td>XX-petit</td>
                <td>{{quantites.XXpetit_enfant}}</td>
                <td>{{quantites.XXpetit_adulte}}</td>
                <td></td>
            </tr>
            <tr>
                <td>X-petit</td>
                <td>{{quantites.Xpetit_enfant}}</td>
                <td>{{quantites.Xpetit_adulte}}</td>
                <td></td>
            </tr>
            <tr>
                <td>Petit</td>
                <td>{{quantites.petit_enfant}}</td>
                <td>{{quantites.petit_adulte}}</td>
                <td></td>
            </tr>
            <tr>
                <td>Moyen</td>
                <td>{{quantites.moyen_enfant}}</td>
                <td>{{quantites.moyen_adulte}}</td>
                <td></td>
            </tr>
            <tr>
                <td>Grand</td>
                <td>{{quantites.grand_enfant}}</td>
                <td>{{quantites.grand_adulte}}</td>
                <td></td>
            </tr>
            <tr>
                <td>X-grand</td>
                <td>{{quantites.Xgrand_enfant}}</td>
                <td>{{quantites.Xgrand_adulte}}</td>
                <td></td>
            </tr>
            <tr>
                <td>XX-grand</td>
                <td>{{quantites.XXgrand_enfant}}</td>
                <td>{{quantites.XXgrand_adulte}}</td>
                <td></td>
            </tr>
            <tr>
                <td>Sans grandeur</td>
                <td>{{quantites.sansGrandeur_enfant}}</td>
                <td>{{quantites.sansGrandeur_adulte}}</td>
                <td>{{quantites.sansGrandeur}}</td>
            </tr>
        </table>
    <b>Quantité totale:  </b>{{costume.quantite_totale}}<br><br>
    <b>Notes: </b>{{#if costume.notes}}{{costume.notes}}{{else}}N/A{{/if}}  <br>
    <b>Localisation: </b>{{#if costume.localisation}}{{costume.localisation}}{{else}}N/A{{/if}}<br>
    <b>Boîte: </b>{{#if costume.boite}}{{costume.boite}}{{else}}N/A{{/if}} <br><br>
    <button type="button" class="btn btn_roseFonce" onclick=rediriger()>MODIFIER</button>
  </div>
</div>

